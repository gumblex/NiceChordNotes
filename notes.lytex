  <c e g bes dis' fis' aes'>1-\markup { \super {"7(" \sharp 9 \sharp 11 \flat "13)"} }
  <c ees ges beses>1-\markup { \super "dim7" }
  <c e gis bes>1-\markup { \super "aug7" }
}
